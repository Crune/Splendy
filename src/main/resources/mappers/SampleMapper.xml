<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.kh.splendy.sample.SampleMapper">
	<resultMap id="testVo" type="org.kh.splendy.vo.TestVO">
		<result column="id" property="id" />
		<result column="pw" property="pw" />
		<result column="age" property="age" />
		<result column="name" property="name" />
		<result column="reg" property="reg" />
	</resultMap>
	<insert id="set" parameterType="org.kh.splendy.vo.TestVO">
	<![CDATA[
		insert into test (id, pw, age, name, reg) values
		(#{id},#{pw},#{age},#{name},sysdate)
	]]>
	</insert>	
	<insert id="update" parameterType="org.kh.splendy.vo.TestVO">
	<![CDATA[
		UPDATE
			test
		SET
			pw=#{pw}, age=#{age}, name=#{name}
		WHERE
			id=#{id}
	]]>
	</insert>
	<select id="get" parameterType="String" resultMap="testVo">
		select * from test where id = #{id}
	</select>
</mapper>