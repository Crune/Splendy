<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.kh.splendy.mapper.BoardMapper">
 
	<resultMap id="BoardVO" type="org.kh.splendy.vo.Article">
		<result column="U_ID" property="u_id" />
		<result column="AT_ID" property="at_id" />
		<result column="BD_ID" property="bd_id" />
		<result column="AT_SUBJECT" property="subject" />
		<result column="AT_CONTENT" property="content" />
		<result column="AT_PASS" property="pass" />
		<result column="AT_READCOUNT" property="readcount" />
		<result column="AT_IP" property="ip" />
		<result column="AT_REPLY" property="reply" />
		<result column="AT_RE_STEP" property="re_step" />
		<result column="AT_RE_LEVEL" property="re_level" />
		<result column="AT_CATEGORY" property="category" />
		<result column="AT_REG_DATE" property="reg_date" />
	</resultMap>

	<select id="getList" parameterType="org.kh.splendy.vo.Article" resultMap="BoardVO">
		select * from KH_ARTICLE
	</select>
	
